@model Website_TI.Models.ViewModel.ClienteCreateViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <main>
        <h1 style="text-align: center;">Registre-se</h1>
        <h2><p style="text-align: center;">Já tem uma conta? <a href="login.html">Inicie sessão aqui</a>.</p></h2>
        <section class="register-section">
            <div class="container">

                <form asp-action="Create" asp-controller="Clientes" method="post">
                    <label for="Nome">Nome Completo:</label>
                    <input type="text" id="Nome" name="Nome" required>

                    <label for="Genero">Gênero:</label>
                    <select id="Genero" name="Genero" required>
                        <option value="M">Masculino</option>
                        <option value="F">Feminino</option>
                    </select>

                    <label for="Telemovel">Telemóvel:</label>
                    <input type="text" id="Telemovel" name="Telemovel" required>

                    <label for="Senha">Senha:</label>
                    <input type="password" id="Senha" name="Senha" required>

                    <label for="Idade">Idade:</label>
                    <input type="number" id="Idade" name="Idade" required>

                    <button type="submit">Registrar</button>
                </form>

            </div>
        </section>
    </main>
</body>