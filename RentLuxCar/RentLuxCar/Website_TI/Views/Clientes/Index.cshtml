@model IEnumerable<Website_TI.Models.DTO.Cliente>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <main>
        <h1 style="text-align: center;">Registre-se</h1>
        <h2><p style="text-align: center;">Já tem uma conta? <a href="login.html">Inicie sessão aqui</a>.</p></h2>
        <section class="register-section">
            <div class="container">

                <form style="text-align:center;" class="register-form" action="" method="post">
                    <label for="fullName">Nome Completo:</label>
                    <input type="text" id="fullName" name="fullName" required>

                    <label for="gender">Gênero:</label>
                    <select id="gender" name="gender" required>
                        <option value="M">Masculino</option>
                        <option value="F">Feminino</option>
                    </select>

                    <label for="phone">Telemóvel:</label>
                    <input type="text" id="phone" name="phone" required>

                    <label for="password">Senha</label>
                    <input type="password" id="password" name="password" required>

                    <label for="age">Idade:</label>
                    <input type="number" id="age" name="age" required>

                    <button type="submit">Registrar</button>
                </form>

            </div>
        </section>
    </main>
</body>