@model IEnumerable<Website_TI.Models.DTO.Aluguer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CarroAlugado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataDeAluguer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InicioAluguer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FimAluguer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntregaViaturaAluguer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CarroAlugado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataDeAluguer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InicioAluguer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FimAluguer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntregaViaturaAluguer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCliente)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
